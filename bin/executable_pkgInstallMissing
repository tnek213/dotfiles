#!/bin/bash

has() {
  command -v "$1" &>/dev/null
}

if has pacman; then
  INSTALL="sudo pacman --needed -S"
  $INSTALL tree               # List directories in a a tree
fi

if has paru; then
  INSTALL="paru --needed -S"
  $INSTALL informant          # Arch linux news reader
  $INSTALL kb                 # Text-oriented minimalist cmd knowledge base manager. See: https://wiki.archlinux.org/title/Kb
fi
